<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CrearRecordatorio">

    <!-- Banner -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0077C2"
        android:text="Control médico"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvBienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:textSize="20sp"
        android:textColor="#212121"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp" />

    <!-- Etiqueta de Usuario con diseño más limpio -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:textColor="#212121"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingBottom="8dp" /> <!-- Espaciado debajo del texto -->

    <!-- Spinner para Usuario con fondo personalizado -->
    <Spinner
        android:id="@+id/spinnerUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" /> <!-- Espaciado debajo del spinner -->

    <!-- Etiqueta de Doctor -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor"
        android:textColor="#212121"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingBottom="8dp" />

    <!-- Spinner para Doctor -->
    <Spinner
        android:id="@+id/spinnerDoctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" /> <!-- Espaciado debajo del spinner -->

    <!-- Etiqueta de Especialidad -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Especialidad"
        android:textColor="#212121"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <!-- Spinner para Especialidad -->
    <Spinner
        android:id="@+id/spinnerEspecialidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" /> <!-- Espaciado debajo del spinner -->

    <EditText
        android:id="@+id/etFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha (YYYY-MM-DD)"
        android:background="@drawable/rounded_background"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/etHora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hora (HH:MM)"
        android:background="@drawable/rounded_background"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/etDireccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dirección"
        android:background="@drawable/rounded_background"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/etNota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nota"
        android:background="@drawable/rounded_background"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Botón Hecho con el color azul proporcionado -->
    <Button
        android:id="@+id/btnHecho"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Hecho"
        android:backgroundTint="#0288D1"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <!-- Botón Regresar con el color azul proporcionado -->
    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#01579B"
        android:text="Regresar"
        android:textColor="@android:color/white" />

</LinearLayout>

